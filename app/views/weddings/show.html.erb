<div class="wedding-detail">
<h3><%= @wedding.name %> Wedding Registry</h3>

<% if @gifts && @gifts.length > 0 %>
    <table>
        <tr>
            <th>Gift</th>
            <th>Claimed by</th>
        </tr>

        <% @gifts.each do |gift|%>
            <tr>
            <td><%= link_to gift.name, gift_path(gift.id) %></td>
            <% if gift.guest_id %>
                <td><%= gift.guest.name %></td>
            <% else %>
                <td><%= gift.status.capitalize %></td>
            <% end %>
            </tr>
        <% end %>
    </table>
<% end %>

<% if @guests && @guests.length > 0 %>
    <table>
        <tr>
            <th>Guest Name</th>
        </tr>

        <% @guests.each do |guest|%>
            <tr>
            <td><%= guest.name %></td>
            </tr>
        <% end %>
    </table>
<% end %>


<h3>Add Gifts <%= link_to 'Click here', new_gift_path(:registry => @wedding.registry_id)%></h3>
<h3>Add Guests <%= link_to 'Click here', new_guest_path(:wedding => @wedding.id)%></h3>

</div>
